<p id="notice"><%= notice %></p>

<h1>Repair Histories</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Pccode</th>
      <th>Observation</th>
      <th>Area</th>
      <th>Repair type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repair_histories.each do |repair_history| %>
      <tr>
        <td><%= repair_history.date %></td>
        <td><%= repair_history.pccode %></td>
        <td><%= repair_history.observation %></td>
        <td><%= repair_history.area %></td>
        <td><%= repair_history.repair_type %></td>
        <td><%= link_to 'Show', repair_history %></td>
        <td><%= link_to 'Edit', edit_repair_history_path(repair_history) %></td>
        <td><%= link_to 'Destroy', repair_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

