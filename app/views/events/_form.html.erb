






<div class="my-3 my-md-5">
          <div class="container">
            <div class="row">
              <div class="col-12">
              <%= form_for(@event,:html => {:class => 'card'}) do |form| %>
                  <div class="card-header">
                    <h3 class="card-title">Registro de Evento</h3>
                  </div>
                  <div class="card-body">
                    <div class="row">
             <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>         
 
<div class="col-xs-6 col-md-10"></div>


    <div class="col-12">
            <div class="form-group">
              <label class="form-label">Titulo del evento</label>
              <%= form.text_field :title, :class => 'form-control' %>

            </div></div>
<div class="col-12">
            <div class="form-group">
              <label class="form-label">Fecha de inicio de Evento</label>
              <%= form.text_field :start, id: :start, :value=>Date.today.strftime('%d/%m/%Y'),class: 'datepicker form-control'%>

            </div></div>
            <div class="col-12">
             <div class="form-group">
              <label class="form-label">Fecha de inicio de Evento</label>
              <%= form.text_field :end, id: :end, :value=>Date.today.strftime('%d/%m/%Y'),class: 'datepicker form-control'%>

            </div></div>

      
 
   </div>
   </div>
  <div class="card-footer text-right">
                  <div class="d-flex">
    
    <%= form.submit "Registrar" ,class: "btn btn-primary ml-auto"  %>

  </div>
                </div>
<% end %>
   </div>
  </div>
</div>
</div>
</div>





