<div class="my-3 my-md-5">
          <div class="container">
            <div class="row">
              <div class="col-12">
              <%= form_for(@service,:html => {:class => 'card'}) do |form| %>
                  <div class="card-header">
                    <h3 class="card-title">Ficha de Servicio</h3>
                  </div>
                  <div class="card-body">
                    <div class="row">
             <% if service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>         
 
<div class="col-xs-6 col-md-10"></div>
 <div class="col-xs-6 col-md-2">
            <div class="form-group">
              <label class="form-label">Fecha de servicio</label>
              <%= form.text_field :date, id: :service_date, :value=>Date.today.strftime('%d/%m/%Y'),class: 'datepicker form-control'%>

            </div></div>
             <div class="col-12">
            <div class="form-group">
              <label class="form-label">Tecnico</label>
              <%= form.select :tecnic_id, Tecnic.all.collect{ |s| [ s.name , s.id ] }, {},{ :class => 'form-control' }%>

            </div></div>
              <div class="col-12">
            <div class="form-group">
              <label class="form-label">Area Solicitante</label>
              <%= form.select :service_area_id, ServiceArea.all.collect{ |s| [ s.name , s.id ] },{},{ :class => 'form-control', :id => 'complaint_selector'}%>

            </div></div>

            <div class="col-12" id="complaint_selector2">
            <div class="form-group">
              <label class="form-label">Juzgado Solicitante</label>
              <%= form.select :area_id, Area.all.collect{ |s| [ s.name , s.id ] }, {},{ :class => 'form-control', :id => 'complaint_selector2'}%>

            </div></div>
          
            <div class="col-12">
            <div class="form-group">
              <label class="form-label">Modo de Servicio</label>
              <%= form.select :service_mode_id, ServiceMode.all.collect{ |s| [ s.name , s.id ] }, {},{ :class => 'form-control' }%>

            </div></div>
             <div class="col-12">
            <div class="form-group">
              <label class="form-label">Servicio Realizado</label>
              <%= form.select :service_type_id, ServiceType.all.collect{ |s| [ s.name , s.id ] }, {},{ :class => 'form-control' }%>

            </div></div>
           <div class="col-12">
            <div class="form-group">
              <label class="form-label flo">Observacion</label>
              <%= form.text_field :observation, :class => 'form-control' %>

            </div></div>

 
   </div>
  <div class="card-footer text-right">
                  <div class="d-flex">
    
    <%= form.submit "Registrar" ,class: "btn btn-primary ml-auto"  %>

  </div>
                </div>
<% end %>
   </div>
  </div>
</div>
</div>
</div>
